@{
    ViewData["Title"] = "Dashboard";
    var recentCars = ViewBag.RecentCars as List<GarageManagementSystem.Models.Car>;
}

<div class="mb-4">
    <h1 class="display-6">Garage Dashboard</h1>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card shadow-sm">
            <div class="card-body text-center">
                <h6 class="text-muted">Total Cars</h6>
                <h2>@ViewBag.TotalCars</h2>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm">
            <div class="card-body text-center">
                <h6 class="text-muted">In Progress</h6>
                <h2 class="text-warning">@ViewBag.CarsInProgress</h2>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm">
            <div class="card-body text-center">
                <h6 class="text-muted">Ready</h6>
                <h2 class="text-success">@ViewBag.CarsReady</h2>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm">
            <div class="card-body text-center">
                <h6 class="text-muted">Owners</h6>
                <h2>@ViewBag.TotalOwners</h2>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-8">
        <div class="card shadow-sm">
            <div class="card-header">
                <strong>Recent Cars</strong>
            </div>
            <div class="card-body p-0">
                <table class="table mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Brand</th>
                            <th>Owner</th>
                            <th>Arrival</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (recentCars != null && recentCars.Any())
                        {
                            foreach (var car in recentCars)
                            {
                                <tr>
                                    <td>@car.Brand</td>
                                    <td>@car.Owner.FullName</td>
                                    <td>@car.ArrivalDate.ToShortDateString()</td>
                                    <td>
                                        @if (car.IsReady)
                                        {
                                            <span class="badge bg-success"> Ready</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark"> <i class="bi bi-clock"></i> In Progress</span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="4" class="text-center text-muted p-3">
                                    No cars yet
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-header">
                <strong>Quick Actions</strong>
            </div>
            <div class="card-body d-grid gap-2">
                <a asp-controller="Cars" asp-action="Create" class="btn btn-success">
                    Add Car
                </a>
                <a asp-controller="Owners" asp-action="Create" class="btn btn-primary">
                    Add Owner
                </a>
                <a asp-controller="Employees" asp-action="Create" class="btn btn-secondary">
                    Add Employee
                </a>
            </div>
        </div>
    </div>
</div>
