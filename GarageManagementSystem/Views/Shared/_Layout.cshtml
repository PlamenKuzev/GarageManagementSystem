<!DOCTYPE html>

<html lang="en">

<head>
    <script>
        (function () {
            const theme = localStorage.getItem("theme");
            if (theme === "dark") {
                document.documentElement.classList.add("dark-mode");
            }
        })();
    </script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GarageManagementSystem</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GarageManagementSystem.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
</head>


<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid d-flex align-items-center">

                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house"></i> Home
                </a>

                <div class="collapse navbar-collapse justify-content-center">
                    <ul class="navbar-nav flex-row gap-4">
                        <li class="nav-item card dashboard-card">
                            <a class="nav-link" asp-controller="Owners" asp-action="Index">
                                <i class="bi bi-people"></i> Owners
                            </a>
                        </li>
                        <li class="nav-item card dashboard-card">
                            <a class="nav-link" asp-controller="Cars" asp-action="Index">
                                <i class="bi bi-car-front"></i> Cars
                            </a>
                        </li>
                        <li class="nav-item card dashboard-card">
                            <a class="nav-link" asp-controller="Employees" asp-action="Index">
                                <i class="bi bi-person-vcard"></i> Employees
                            </a>
                        </li>
                    </ul>
                </div>

                <div>
                    <button id="themeToggle" class="btn btn-outline-secondary btn-sm">
                        🌙
                    </button>
                </div>

            </div>
        </nav>


    </header>
    <div class="container ">
        <main role="main" class="pb-3 main-content">
            @RenderBody()
        </main> 
    </div>


    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2026 - Garage Management System - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
